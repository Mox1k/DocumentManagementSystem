<Page x:Class="DocumentManagementSystem.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DocumentManagementSystem.Pages"
      xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Registration" Background="Transparent">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="1.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Border CornerRadius="0 0 0 10" Grid.Column="0">
            <Border.Background>

                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#3aa9ad" Offset="0"></GradientStop>
                    <GradientStop Color="#3aada1" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Canvas>
                    <Polygon Points="0,20 230,140, 0,270" Fill="#4eb1b6"></Polygon>
                    <Polygon Points="100,400 200,370 180,470 " Fill="#4eb1b6"></Polygon>
                </Canvas>
            </Grid>
        </Border>

        <Border CornerRadius="0 0 10 0" Background="White" Grid.Column="1">
            <Grid>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="Регистрация" FontWeight="Bold" Foreground="#1eb1b6" FontSize="30"></TextBlock>
                    <wpfui:TextBox AcceptsReturn="True" Placeholder="Фамилия" Margin="0 20 0 0" BorderBrush="LightGray" Width="350" Background="#4eb1b6"/>
                    <wpfui:TextBox AcceptsReturn="True" Placeholder="Имя" Margin="0 20 0 0" BorderBrush="LightGray" Width="350" Background="#4eb1b6"/>
                    <wpfui:TextBox AcceptsReturn="True" Placeholder="Отчество" Margin="0 20 0 0" BorderBrush="LightGray" Width="350" Background="#4eb1b6"/>
                    <wpfui:TextBox AcceptsReturn="True" Placeholder="Логин" Margin="0 20 0 20" BorderBrush="LightGray" Width="350" Background="#4eb1b6"/>
                    <wpfui:PasswordBox Placeholder="Пароль" Width="350" Margin="0 0 0 20" Background="#4eb1b6"/>
                    <wpfui:PasswordBox Placeholder="Повтроите пароль" Width="350" Background="#4eb1b6"/>
                    <wpfui:Button Foreground="White" Background="#4eb1b6" Width="200" Margin="0 20 0 0">Зарегестрироваться</wpfui:Button>

                </StackPanel>
            </Grid>
        </Border>
        
    </Grid>
</Page>
